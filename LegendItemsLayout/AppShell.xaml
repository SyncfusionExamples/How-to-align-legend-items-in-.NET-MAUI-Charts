<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LegendItemsLayout.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LegendItemsLayout"
    Shell.FlyoutBehavior="Flyout"
    Title="LegendItemsLayout">

    <ShellContent Title="Default" Route="default"
                    ContentTemplate="{DataTemplate local:Default}"  />
    <ShellContent Title="VerticalStack" Route="page3"
                  ContentTemplate="{DataTemplate local:VerticalStackLayouts}" />
    <ShellContent  Route="page1" Title="HorizontalStack"
                   ContentTemplate="{DataTemplate local:FlexLayout}"  />
    <ShellContent  Title="UniformItems" Route="page4"
                  ContentTemplate="{DataTemplate local:UniformItems}" />
    <ShellContent Route="page2" Title="WrapItems" 
                  ContentTemplate="{DataTemplate local:MainPage}" />

</Shell>
